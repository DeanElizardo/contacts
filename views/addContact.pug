doctype html 

html(lang="en-US")
  head
    title New Contact 
    meta(charset="UTF-8")
    link(rel="stylesheet" href="/stylesheets/application.css")

body 
  header 
    h1 My Contacts Manager 
    h2 Create a New Contact

    if errorMessages && errorMessages.length > 0
      ul.flash 
        each message in errorMessages 
          li.error=message 

  main 
    form(action="/contacts" method="post")
      fieldset
        dl 
          dt
            label(for="firstName") First Name:
          dd
            input(type="text" 
                  id="firstName" 
                  name="firstName" 
                  required="required" 
                  value=`${firstName}`)
        dl
          dt 
            label(for="lastName") Last Name: 
          dd
            input(type="text" 
                  id="lastName" 
                  name="lastName" 
                  required="required"
                  value=`${lastName}`)
        dl
          dt
            label(for="phoneNumber") Phone Number:
          dd
            input(type="text" 
                  id="phoneNumber" 
                  name="phoneNumber" 
                  placeholder="###-###-####" 
                  required="required"
                  value=`${phoneNumber}`)
      fieldset
        input(type="submit" value="Save")
        button.cancel(formaction="/contacts" formmethod="get" formnovalidate) Cancel